# MediaFusion Seedbox Configuration
# Copy this file to .env and customize

# ==================== REQUIRED SETTINGS ====================

# Your seedbox domain or IP address (without protocol)
HOST_URL="http://YOUR_SEEDBOX_IP:8000"
POSTER_HOST_URL="http://YOUR_SEEDBOX_IP:8000"

# Database connection - Use local MongoDB or MongoDB Atlas
MONGO_URI="mongodb://mongodb:27017/mediafusion"
# For MongoDB Atlas (recommended for low memory):
# MONGO_URI="mongodb+srv://username:password@cluster.mongodb.net/mediafusion?retryWrites=true&w=majority"

# Redis connection
REDIS_URL="redis://redis:6379"

# Security - Generate with: openssl rand -hex 16
SECRET_KEY="your_secret_key_here"
API_PASSWORD="your_secure_password"

# ==================== PERFORMANCE TUNING ====================

# Gunicorn workers and threads (for memory optimization)
GUNICORN_WORKERS=1
GUNICORN_THREADS=2

# ==================== OPTIONAL FEATURES ====================

# Disable intensive scrapers to save memory
IS_SCRAP_FROM_TORRENTIO="false"
is_scrap_from_mediafusion="false"
is_scrap_from_zilean="false"

# Disable Prowlarr if not needed (saves significant memory)
# PROWLARR_URL="http://prowlarr:9696"
# PROWLARR_API_KEY=""
PROWLARR_IMMEDIATE_MAX_PROCESS=10
PROWLARR_IMMEDIATE_MAX_PROCESS_TIME=15
PROWLARR_SEARCH_INTERVAL_HOUR="48"
prowlarr_live_title_search="false"

# Rate limiting (recommended for shared seedbox)
ENABLE_RATE_LIMIT="true"

# Cache settings
store_stremthru_magnet_cache="false"

# ==================== OPTIONAL SERVICES ====================
# Uncomment if you want to use these features

# Premiumize OAuth credentials
# PREMIUMIZE_OAUTH_CLIENT_ID="your_client_id"
# PREMIUMIZE_OAUTH_CLIENT_SECRET="your_client_secret"

# Other Debrid Services
# REALDEBRID_API_KEY=""
# ALLDEBRID_API_KEY=""
# DEBRID_LINK_API_KEY=""

# ==================== LOGGING ====================
# Reduce logging to save resources
LOG_LEVEL="WARNING"  # Use WARNING instead of INFO/DEBUG
